<odoo>
    <record id="view_broiler_daily_log_list" model="ir.ui.view">
        <field name="name">broiler.daily.log.list</field>
        <field name="model">broiler.daily.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="flock_id"/>
                <field name="feed_starter_product_tmpl_id"/>
                <field name="feed_starter_kg"/>
                <field name="feed_finisher_product_tmpl_id"/>
                <field name="feed_finisher_kg"/>
                <field name="feed_kg"/>
                <field name="water_l"/>
                <field name="dead_qty"/>
                <field name="culled_qty"/>
            </list>
        </field>
    </record>

    <record id="view_broiler_daily_log_form" model="ir.ui.view">
        <field name="name">broiler.daily.log.form</field>
        <field name="model">broiler.daily.log</field>
        <field name="arch" type="xml">
            <form string="Registro Diario">
                <sheet>
                    <group>
                        <field name="flock_id"/>
                        <field name="date"/>
                    </group>

                    <group string="Alimentación">
                        <group>
                            <field name="feed_starter_product_tmpl_id"/>
                            <field name="feed_starter_kg"/>
                            <field name="starter_stock_available" widget="float" readonly="1"/>
                        </group>
                        <group>
                            <field name="feed_finisher_product_tmpl_id"/>
                            <field name="feed_finisher_kg"/>
                            <field name="finisher_stock_available" widget="float" readonly="1"/>
                        </group>
                        <field name="feed_kg" readonly="1"/>
                    </group>

                    <group string="Producción">
                        <field name="water_l"/>
                        <field name="dead_qty"/>
                        <field name="culled_qty"/>
                        <field name="avg_weight_g"/>
                        <field name="sample_size"/>
                    </group>

                    <group string="Notas">
                        <field name="vaccine"/>
                        <field name="medication"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_broiler_daily_log" model="ir.actions.act_window">
        <field name="name">Registros diarios</field>
        <field name="res_model">broiler.daily.log</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
