<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista Tree del Consumo de Alimento -->
        <record id="view_broiler_feed_consumption_tree" model="ir.ui.view">
            <field name="name">broiler.feed.consumption.tree</field>
            <field name="model">broiler.feed.consumption</field>
            <field name="arch" type="xml">
                <list string="Consumo de Alimento" decoration-muted="state == 'draft'" decoration-success="state == 'done'" decoration-danger="state == 'cancel'">
                    <field name="lot_id"/>
                    <field name="date"/>
                    <field name="product_id"/>
                    <field name="product_uom_id" optional="hide"/>
                    <field name="qty"/>
                    <field name="state" widget="label_selection" 
                           options="{'classes': {
                               'draft': 'warning',
                               'confirmed': 'info',
                               'done': 'success',
                               'cancel': 'danger'
                           }}"/>
                    <button name="action_confirm" type="object" string="Confirmar" 
                            icon="fa-check" class="btn-primary btn-sm" 
                            invisible="state != 'draft'"/>
                    <button name="action_mark_done" type="object" string="Marcar Hecho" 
                            icon="fa-check-circle" class="btn-success btn-sm" 
                            invisible="state != 'confirmed'"/>
                    <button name="action_cancel" type="object" string="Cancelar" 
                            icon="fa-times" class="btn-danger btn-sm" 
                            invisible="state in ('done', 'cancel')"/>
                </list>
            </field>
        </record>

        <!-- Vista Form del Consumo de Alimento -->
        <record id="view_broiler_feed_consumption_form" model="ir.ui.view">
            <field name="name">broiler.feed.consumption.form</field>
            <field name="model">broiler.feed.consumption</field>
            <field name="arch" type="xml">
                <form string="Consumo de Alimento">
                    <header>
                        <button name="action_confirm" type="object" string="Confirmar Consumo" 
                                class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_mark_done" type="object" string="Marcar como Realizado" 
                                class="btn-success" invisible="state != 'confirmed'"/>
                        <button name="action_cancel" type="object" string="Cancelar" 
                                class="btn-danger" invisible="state in ('done', 'cancel')"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,confirmed,done,cancel"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="lot_id" options="{'no_create': True}"/>
                                <field name="date"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="product_id"/>
                                <field name="product_uom_id" invisible="1"/>
                            </group>
                            <group>
                                <field name="qty"/>
                            </group>
                        </group>
                    </sheet>
                    <notebook>
                        <page string="Información Adicional">
                            <group>
                                <field name="production_id" readonly="1"/>
                                
                            </group>
                        </page>
                    </notebook>
                </form>
            </field>
        </record>

        <!-- Acción para el Consumo de Alimento -->
        <record id="action_broiler_feed_consumption" model="ir.actions.act_window">
            <field name="name">Consumo de Alimento</field>
            <field name="res_model">broiler.feed.consumption</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_broiler_feed_consumption_tree"/>
            <field name="target">current</field>
            <field name="help">Registrar consumo de alimento por lote con control de inventario automático</field>
        </record>

       

    </data>
</odoo>