<odoo>
    <record id="view_broiler_flock_list" model="ir.ui.view">
        <field name="name">broiler.flock.list</field>
        <field name="model">broiler.flock</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date_in"/>
                <field name="initial_qty"/>
                <field name="alive_qty"/>
                <field name="dead_qty"/>
                <field name="culled_qty"/>
                <field name="mortality_pct"/>
                <field name="avg_weight_g"/>
                <field name="feed_total_kg"/>
                <field name="fcr"/>
                <field name="total_cost"/>
                <field name="cost_feed"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_broiler_flock_form" model="ir.ui.view">
        <field name="name">broiler.flock.form</field>
        <field name="model">broiler.flock</field>
        <field name="arch" type="xml">
            <form string="Lote">
                <header>
                    <button name="action_view_pending_pickings" type="object" string="Ver Pickings Pendientes"
                            class="btn-primary"/>
                    <button name="action_set_active" type="object" string="Activar"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_set_closed" type="object" string="Cerrar"
                            class="btn-secondary" invisible="state == 'closed'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,closed"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_in"/>
                            <field name="initial_qty"/>
                            <field name="starter_stock_available" widget="float" readonly="1"/>
                            <field name="finisher_stock_available" widget="float" readonly="1"/>
                        </group>
                        <group>
                            <field name="farm_name"/>
                            <field name="house"/>
                            <field name="supplier"/>
                            <field name="strain"/>
                        </group>
                    </group>

                    <group string="ConfiguraciÃ³n de alimento">
                        <field name="feed_starter_product_tmpl_id"
                            options="{'no_create': True, 'no_create_edit': True}"/>
                        <field name="feed_finisher_product_tmpl_id"
                            options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>

                    <group string="Costos">
                        <field name="total_cost" readonly="1"/>
                        <field name="cost_feed" readonly="1"/>
                        <field name="cost_other"/>
                    </group>

                    <group string="KPIs">
                        <group>
                            <field name="age_days" readonly="1"/>
                            <field name="alive_qty" readonly="1"/>
                            <field name="dead_qty" readonly="1"/>
                            <field name="culled_qty" readonly="1"/>
                            <field name="mortality_pct" readonly="1"/>
                        </group>
                        <group>
                            <field name="avg_weight_g" readonly="1"/>
                            <field name="feed_total_kg" readonly="1"/>
                            <field name="water_total_l" readonly="1"/>
                            <field name="fcr" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Registros diarios">
                            <field name="daily_log_ids" context="{'default_flock_id': id}">
                                <list editable="bottom">
                                    <field name="date"/>
                                    <field name="feed_starter_product_tmpl_id"/>
                                    <field name="feed_starter_kg"/>
                                    <field name="starter_stock_available" widget="float" readonly="1"/>
                                    <field name="feed_finisher_product_tmpl_id"/>
                                    <field name="feed_finisher_kg"/>
                                    <field name="finisher_stock_available" widget="float" readonly="1"/>
                                    <field name="feed_kg" readonly="1"/>
                                    <field name="water_l"/>
                                    <field name="dead_qty"/>
                                    <field name="culled_qty"/>
                                </list>
                            </field>
                        </page>

                        <page string="Chatter">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_broiler_flock" model="ir.actions.act_window">
        <field name="name">Lotes</field>
        <field name="res_model">broiler.flock</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
